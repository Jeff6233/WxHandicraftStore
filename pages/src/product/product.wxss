/* pages/src/product/product.wxss */

.product .product-for{
  width: 95%;
  margin: 0 auto;
  overflow: hidden;
  text-align: center;
}
.product .product-for .product-box{
  width: 50%;
  float: left;
}
.product .product-for .product-box .product-image{
  width: 90%;
  height: 100px;
  background-size: 30%;
  margin: 0 auto;
  overflow: hidden;
  border-radius: 5px;
  box-shadow: 2px 2px 5px #a1a1a1;
  margin-bottom: 5vmax;
}
.product .product-for .product-box .product-image >image{
  width: 100%;
  height: 100%;
}