.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.index .show-type .product-type-name{
  text-align: center;
  margin: 10px 0px 10px 0px;
  font-size: 18px;
  color: #6699FF;
}
.index .show-type .product-type-image >image{
  width:100%; 
  border-radius: 5px;
  box-shadow: 0px 4px 0px #eeeeee;
}